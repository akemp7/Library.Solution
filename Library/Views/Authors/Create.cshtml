@model Library.Models.Author

<h3>Add an Author</h3>
<hr>
@using (Html.BeginForm())
{
    @Html.Label("FirstName", "First Name: ")
    @Html.TextBoxFor(model => model.FirstName, new { @class="form-control"})
    <br>
    @Html.Label("LastName", "Last Name: ")
    @Html.TextBoxFor(model => model.LastName, new { @class="form-control", required="required"})
    <input type="submit" value="Add Author" class="btn btn-info">
}
<button class="btn btn-default">@Html.ActionLink("Back To Home", "Index", "Account")</button>